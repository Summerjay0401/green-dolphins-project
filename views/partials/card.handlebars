<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.4/dist/css/bulma-carousel.min.css" />
<div class="card">
        <div class="header">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48">
                        <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4">{{post.user.name}}</p>
                    <p class="subtitle is-6">@{{post.user.username}}</p>
                </div>
            </div>
        </div>
        <div class="card-image">
            {{> media media=post.media}}
        </div>
        <div class="card-content">
            <div class="level is-mobile">
                <div class="level-left">
                    <div class="level-item has-text-centered">
                        <a href="">
                            <i class="fa-sharp fa-solid fa-lg fa-paw"></i>
                        </a>
                    </div>
                    <div class="level-item has-text-centered">
                        <div>
                            <a href="">
                                <i class="fa-regular fa-lg fa-comment"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content">
                <p>
                    <strong>{{post.post_likes.length}} Likes</strong>
                </p>
                <strong>{{post.user.username}}</strong> {{post.text_content}}
                {{#each post.hashtags as |hash|}}
                    <a href="#">{{hash.hashtag}}</a>
                {{/each}}
                <br>
                <time datetime="2018-1-1">11:09 PM - 1 Jan 2018</time>
            </div>
        </div>
        <div class="card-footer">
            <div class="columns is-mobile">
                <div class="column is-11">
                    <div class="field">
                        <div class="control">
                            <input class="input is-medium" type="text" placeholder="Add a comment . . .">
                        </div>
                    </div>
                </div>
                <div class="column has-text-centered">
                    <button class="button">
                        <i class="material-icons">more_horiz</i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.3/dist/js/bulma-carousel.min.js"></script>