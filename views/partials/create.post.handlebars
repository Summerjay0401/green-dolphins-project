<div class="modal" id="create-post">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title is-size-5">Create new post</p>
      <a href="#" id="share-post">share</a>
    </header>
    <section class="modal-card-body">
        <div class="columns">
            <div class="column m-auto">
                <img class="is-hidden" id="image-upload-preview"/>
                <div class="file is-small is-boxed is-centered">
                    <label class="file-label">
                        <input class="file-input" type="file" name="post-file" id="post-file">
                        <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Choose a fileâ€¦
                        </span>
                        </span>
                    </label>
                </div>
            </div>
            <div class="column m-auto border-left">
                <div class="columns is-flex-direction-row">
                    <div class="p-2 bd-highlight ml-3">
                        <figure class="image is-48x48">
                            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                        </figure>
                    </div>
                    <div class="p-2 bd-highlight m-auto ml-2">
                    <p class="subtitle is-7"><a href="/profile/{{loggedInUserData.id}}" class="link-to-profile">{{loggedInUserData.username}}</a></p>
                    </div>
                </div>
                
                <div class="field">
                    <div class="control">
                        <textarea class="textarea" placeholder="Write a caption" name="caption" id="caption"></textarea>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <footer class="modal-card-foot">
        <button class="button is-link is-light is-small" onclick="closeModal();">Cancel</button>
    </footer>
  </div>
</div>

<script src="/js/create-post.js"></script>